# Development Dockerfile cho Vue.js
FROM node:20-alpine

# Thiết lập working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (bao gồm dev dependencies)
RUN npm ci --legacy-peer-deps

# Copy source code
COPY . .

# Expose port cho Vite dev server
EXPOSE 3000

# Start Vite dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
